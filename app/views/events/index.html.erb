<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/reserve/NV0eHnNkQDHA21GC3BAJ_Paris%20Louvr.jpg?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
    <h1>Lets find an Event <strong>for</strong> you</strong>!</h1>
    <p>Welcome Friendzoners</p>
    <a class="btn btn-flat" href="#">Start looking</a>
  </div>
</div>

<div class="cards">
  <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1557804506-d8017c1e4856?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1402&q=80)">
    <p class="img-text">Event1</p>
  </div>

  <div class="card-category" style="background-image: url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
    Event2
  </div>

  <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1523875194681-bedd468c58bf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80)">
    Event2
  </div>
</div>

<div class="main-container">
  <div class="event-cards">
    <% @events.each do |event| %>
      <div class="card-trip">
        <img src=<%= event.photo %>>
        <div class="card-trip-infos">
          <div>
            <h2><%= event.name %></h2>
            <p><%= event.host.full_name %></p>
          </div>
         <h2 class="People needed">People Needed <%= event.people_needed %></h2>
         <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
         <%= link_to 'Show', event %>
       </div>
     </div>
    <% end %>
  </div>
</div>


<%= link_to new_event_path do %>
  <%= icon('far', 'plus-square', style: "font-size: 40px; color: red;") %>
<%  end %>





